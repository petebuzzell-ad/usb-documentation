  <div class="my-3 grid lg:grid-cols-4 items-center gap-x-2 gap-y-2">
    <div class="mx-auto py-3 px-3 flex flex-col items-start w-full">
      <button class="button button-primary mb-4 w-full"><span>Primary</span></button>
      <button class="button button-primary button-small mb-4 w-full"><span>Primary Small</span></button>
      <button class="button button-primary button-xsmall w-full"><span>Primary XSmall</span></button>
    </div>

    <div class="mx-auto py-3 px-3 flex flex-col items-start w-full">
      <button class="button button-secondary mb-4 w-full"><span>Secondary</span></button>
      <button class="button button-secondary button-small mb-4 w-full"><span>Secondary Small</span></button>
      <button class="button button-secondary button-xsmall w-full"><span>Secondary XSmall</span></button>
    </div>

    <div class="mx-auto py-3 px-3 flex flex-col items-start w-full">
      <button class="button button-outline mb-4 w-full"><span>Outline</span></button>
      <button class="button button-outline button-small mb-4 w-full"><span>Outlined Small</span></button>
      <button class="button button-outline button-xsmall w-full"><span>Outlined XSmall</span></button>
    </div>

    <div class="mx-auto py-3 px-3 flex flex-col items-start w-full">
      <button class="button button-primary mb-4 w-full" disabled><span>Disabled</span></button>
      <button class="button button-secondary button-small mb-4 w-full" disabled><span>Disabled Small</span></button>
      <button class="button button-outline button-xsmall w-full" disabled><span>Disabled XSmall</span></button>
    </div>

  </div>


  <form id="test-form" class="grid lg:grid-cols-4 grid-cols-1 gap-x-6 mt-12">
    <div>
      <span class="text-left block text-[0.75rem] mb-6 font-bold uppercase tracking-[4px] text-grey-two">FORM FIELDS</span>

      <div class="mb-6 input-wrap w-full">
        <label class="hidden" for="input-one">Input</label>
        <input id="input-one" type="text" name="input-one" id="input-one" required data-error-message="this input is required"
          placeholder="Text Input">
      </div>

      <div class="mb-6 input-wrap w-full">
        <label class="hidden" for="input-two">Input</label>
        <input id="input-two" class="input-invalid" type="text" name="input-one" required data-error-message="this input is required"
          placeholder="Error Text Input">
        <span class="input-messaging input-error text-xsmall">
          <span class="inline-block">{%- render 'icon-error' -%}</span>
          Error message text go here.
        </span>
      </div>

      <div class="mb-6 input-wrap w-full">
        <label class="hidden" for="input-three">Input</label>
        <input id="input-three" type="text" name="input-one" class="input-success" required data-error-message="this input is required"
          placeholder="Successful Text Input">
        <span class="input-messaging input-success text-xsmall">
          <span class="inline-block">{%- render 'icon-success' -%}</span>
          Success message can go here!
        </span>
      </div>

      <div class="mb-6 input-wrap w-full">
        <label class="hidden disabled-label" for="input-four">Disabled message label</label>
        <input id="input-four" type="text" name="input-one" class="input-disabled" required data-error-message="this input is required"
          placeholder="Disabled Text Input" disabled="disabled">
      </div>

      <div class="mb-6 input-wrap w-full">
        <label class="hidden" for="input-five">Number Input</label>
        <input type="number" name="input-five" id="input-five" min="1" max="3" required
          data-error-message="please enter a number between 1 and 3" placeholder="0">
      </div>

      <div class="mb-6 input-wrap w-full">
        <label class="hidden" for="input-six">Text Area</label>
        <textarea id="input-six" name="story" rows="5" cols="33" placeholder="Textarea"></textarea>
      </div>
    </div>
    
    <div>
      <span class="text-left block text-[0.75rem] mb-6 font-bold uppercase tracking-[4px] text-grey-two">Dropdowns</span>

      <div class="select-wrap mb-6 w-full">
        <label class="hidden" for="my-select">Dropdown label</label>
        <select id="my-select">
          <option>Option One</option>
          <option>Option Three</option>
          <option>Option Two</option>
          <option>Option Four</option>
        </select>
      </div>

      <div class="select-wrap mb-6 w-full">
        <label class="hidden disabled-label" for="my-select-2">Disabled Dropdown label</label>
        <select id="my-select-2" disabled="disabled">
          <option>Disabled Dropdown</option>
          <option>Option One</option>
          <option>Option Three</option>
          <option>Option Two</option>
          <option>Option Four</option>
        </select>
      </div>
    </div>
    
    <div class="flex flex-col">
      <span class="text-left block text-[0.75rem] mb-6 font-bold uppercase tracking-[4px] text-grey-two">Checkboxes</span>

      <div class="mb-4 check-wrap">
        <input type="checkbox" name="input-checkbox-1" id="input-checkbox-1">
        <label for="input-checkbox-1">This is a checkbox</label>
      </div>

      <div class="mb-4 check-wrap">
        <input type="checkbox" name="input-checkbox-2" id="input-checkbox-2">
        <label for="input-checkbox-2">This is a checkbox</label>
      </div>

      <div class="mb-4 check-wrap">
        <input type="checkbox" name="input-checkbox-3" id="input-checkbox-3" disabled="disabled">
        <label for="input-checkbox-3">This is a disabled checkbox</label>
      </div>
    </div>

    <div class="flex flex-col">
      <span class="text-left block text-[0.75rem] mb-6 font-bold uppercase tracking-[4px] text-grey-two">Radio Buttons</span>

      <div class="mb-4 radio-wrap">
        <input type="radio" name="styleguid-radios" id="input-radio-1">
        <label for="input-radio-1">This is a radio button</label>
      </div>
      <div class="mb-4 radio-wrap">
        <input type="radio" name="styleguid-radios" id="input-radio-2">
        <label for="input-radio-2">This is a radio button</label>
      </div>
      <div class="mb-4 radio-wrap">
        <input type="radio" name="styleguid-radios" id="input-radio-3" disabled="disabled">
        <label for="input-radio-3">This is a radio button</label>
      </div>
    </div>
  </form>

