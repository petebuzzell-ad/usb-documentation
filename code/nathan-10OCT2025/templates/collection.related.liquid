{% layout none %}

[
  {
    "profile": {
      "tag": "also-viewed"
    },
    "results": [
    {%- for product in collection.products limit: 12 -%}
      {
        "attributes": {
          "days_since_published": 78,
          "ga_unique_purchases": 2
        },
        "id": {{ product.id }},
        "mappings": {
          "core": {
            "brand": "{{ product.metafields["global"]["prd_sub_title"] }}",
            "imageUrl": "{{ product.featured_image | img_url: 'master' }}",
            "name": "{{ product.title }}",
            "handle": "{{ product.handle }}",
            "popularity": 78,
            "price": "{{ product.price }}",
            "compareAtPrice": "{{ product.compare_at_price }}",
            "sku": "123ABC",
            "thumbnailImageUrl": "{{ product.featured_image | img_url: '600x' }}",
            "url": "{{ product.url }}"
          }
        }
      }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
    ]
  }
]
