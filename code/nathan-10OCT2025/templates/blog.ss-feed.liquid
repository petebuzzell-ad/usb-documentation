{%- layout none -%}
{%- assign blogTypes = 'news' | split: ',' -%}
{%- for type in blogTypes -%}
{%- paginate blogs[type].articles by 1000 -%}
{%- for article in blogs[type].articles | sort: "published_at" | reverse -%}{"type":{{ type | json }},"id":{{ article.id | json }},"title":{{ article.title | json }},"author":{{ article.author | json }},"url":{{ article.url | json }},"published_at": "{{ article.published_at }}","image": "{{ article.image.src | img_url: 'master' }}","content":{{ article.excerpt_or_content | strip_html | json }},"tags": [{%- for tag in article.tags -%}"{{tag}}"{%- unless forloop.last -%},{%- endunless -%}{%- endfor -%}]}
{% endfor %}{%- endpaginate -%}{%- endfor -%}