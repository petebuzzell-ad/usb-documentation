<div class="lg:px-25">
  <h3 class="md:mb-2 lg:mb-1.5 xl:mb-3 uppercase">Riding Conditions</h3>
  {% if subtitle != blank %}
    <p class="font-normal md:mb-10 lg:mb-8 xl:mb-9.5">{{ subtitle }}</p>
  {% endif %}
  <div class="flex flex-wrap md:-mx-2 lg:-mx-2.5 xl:-mx-1.5">
    {% assign conditions = load | split: '||' %}
    {% for condition in conditions %}
      {% assign details = condition | strip | split: ':' %}
      <div class="md:w-1/3 xl:w-1/6 md:p-2 lg:p-2.5 xl:p-1.5">
        <div class="border-l-2 border-pine bg-white h-full p-6">
          {% assign cond_svg = details[0] | strip | handleize | prepend: 'svg-riding-condition-' %}
          {% capture cond_icon_content %}{% include cond_svg %}{% endcapture %}
          {% unless cond_icon_content contains 'Liquid error' %}
            {{ cond_icon_content }}
          {% endunless %}
          <p class="font-sora font-semibold text-special-xs text-stone mt-6 mb-0 uppercase">{{ details[0] | strip }}</p>
          <p class="font-normal text-p-lg leading-5 mt-1 mb-0">{{ details[1] | strip }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>