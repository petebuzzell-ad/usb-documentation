<div class="w-full px-6 lg:px-14 xl:px-22.5 max-w-[124.5rem] mx-auto pt-6 lg:pt-18 pb-4 lg:pb-13">
  <div class="bg-grey-seven" data-expandable-content>
    <div class="lg:grid lg:grid-cols-2 lg:gap-12 px-9 py-10 lg:p-0 transition-max-height duration-500 ease-out" data-expandable-content-inner>
      <div class="lg:max-w-680">
        <div class="product__desc">
          <div class="text-special-mxs lg:text-special-ms font-semibold uppercase">{{ 'products.product.description' | t }}</div>
          <div class="mt-3 text-ms">
            <p class="m-0">{{ product.description  }}</p>
            {%- if product.metafields["global"]["prd_prop65warning"] != blank and product.metafields["global"]["prd_prop65warning"] == 'Yes' -%}
              <div class="prop-sixty-five text-center pt-3 pb-5 mt-3.5">
                <p class="flex justify-center items-center text-special-xxs tracking-normal mb-0">{%- render 'icon-prop-warning' -%}<span class="ml-2 mr-1"><strong>WARNING: </strong></span> Cancer and Reproductive Harm </p>
                <p class="mb-0 text-special-xxs tracking-normal"><a target="_blank" href="https://www.p65warnings.ca.gov/">www.P65Warnings.ca.gov</a></p>
              </div>
            {%- endif -%}
          </div>
        </div>
      {% assign features = product.metafields["global"]["product_features_en"] | split: '|' %}
      {%- unless features == blank -%}
        <div class="lg:hidden product__features mt-12">
          <div class="text-special-mxs font-semibold uppercase">{{ 'products.product.features' | t }}</div>
          <div class="mt-3 text-ms">
            <ul class="font-normal text-p-s lg:text-base m-0">
              {% for feature in features %}
                <li class="pl-6 relative list-none mb-0">{{ feature }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      {%- endunless -%}

        {%- if product.metafields["global"]["prd_app_material_en"] != blank -%}
          <div class="product__materials mt-12 lg:mt-10">
            <div class="text-special-mxs lg:text-special-ms font-semibold uppercase">{{ 'products.product.fabric' | t }}</div>
            <div class="mt-3 text-ms">
              {%- assign features = product.metafields["global"]["prd_app_material_en"] | split: ';' -%}
              {%- for feature in features -%}
                <p class="font-normal text-p-s lg:text-base m-0">{{ feature }}</p>
              {%- endfor -%}
              {%- if product.metafields["global"]["prd_app_trademarks_en"] != blank -%}
                <div class="flex flex-wrap -mx-2 my-2">
                  {%- assign fabrics = product.metafields["global"]["prd_app_trademarks_en"] | split: ';' -%}
                  {%- for fabric in fabrics -%}
                    <div class="w-1/2 md:w-1/4 lg:w-1/2 p-2">
                      <div class="bg-light-sand h-full p-6">
                        {%- assign fabric_svg = fabric | strip | handleize | prepend: 'svg-fabric-' -%}
                        {%- capture fabric_content -%}{%- render fabric_svg -%}{%- endcapture -%}
                        {%- unless fabric_content contains 'Liquid error' -%}
                          {{ fabric_content }}
                        {%- endunless -%}
                        <p class="font-normal leading-5 mt-4 mb-0">{{ fabric | strip }}</p>
                      </div>
                    </div>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
      {%- unless features == blank -%}
        <div class="hidden lg:block lg:max-w-680">
          <div class="product__features mt-12 lg:mt-0">
            <div class="text-special-mxs lg:text-special-ms font-semibold uppercase">{{ 'products.product.features' | t }}</div>
            <div class="mt-3 text-ms">
              <ul class="font-normal text-p-s lg:text-base m-0">
                {% assign features = product.metafields["global"]["product_features_en"] | split: '|' %}
                {% for feature in features %}
                  <li class="pl-6 relative list-none mb-0">{{ feature }}</li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      {%- endunless -%}
    </div>
    <div class="lg:hidden p-4 text-center border-t border-light-grey" data-expandable-content-toggler>
      <span class="inline-block font-sora font-semibold text-sm uppercase border-b-1.5 border-black">Show More</span>
    </div>
  </div>
</div>
