<script>
  window.inventoryPerVariant = {
    {% for variant in product.variants %}
      {{ variant.id }}: {{ variant.inventory_quantity }}
      {% unless forloop.last == true %},{% endunless %}
    {% endfor %}
  }

  document.addEventListener('pdpVariantChanged', function(e) {
    if(e.detail?.variantId) {
      if(window.inventoryPerVariant[e.detail?.variantId] > 0) { 
        document.querySelector('.inventory-in-stock').innerText = ' In Stock';
        document.querySelector('.inventory-in-stock').classList.remove('oos');
      } else {
        document.querySelector('.inventory-in-stock').innerText = ' Out of Stock';
        document.querySelector('.inventory-in-stock').classList.add('oos');
      }
    }
    if(e.detail?.variantSKU) {
      document.querySelector('.display-sku > span').innerHTML = 'SKU: <span itemprop="sku">'+e.detail?.variantSKU+'</span>';
    }
  })
</script>
{% if product.metafields.colorop.size > 0 %}
  {% for option in product.options %}
    {% assign downcased_option = option | downcase %}
    {% if downcased_option contains 'color' or downcased_option contains 'colour' %}
        {% assign option_index = forloop.index0 %}
        {% break %}
    {% endif %}
  {% endfor %}

  <div class="option_title">Color: <span>{{ variant.options[option_index] | remove: csp_flag_string }}</span></div>
  <div class="product-swatches">
    {% comment %}
    <a href="/products/{{ product.handle }}" class="active">
      <img src="{{ product.featured_image | img_url: '50x50' }}" />
    </a>
    {% endcomment %}    

    {% assign hiddenSwatches = settings.hidden_swatches | split: ',' %}
    {% assign ordering = product.metafields.colorop.ordering | replace: "[", "" | replace: "]", "" | replace : "},{", "@@" | replace: "{", "" | replace: "}", "" | split: "@@" %}

    {% for order in ordering %}
      {% assign orderDetails = order | replace: '"','' | split: ',' %}
      {% for orderDetail in orderDetails %}
        {% assign orderDetailData = orderDetail | split: ':' %}
        {% if orderDetailData[0] == 'handle' %}
          {% assign swatchHandle = orderDetailData[1]  %}
        {% endif %}
        {% if orderDetailData[0] == 'position' %}
          {% assign swatchPosition = orderDetailData[1]  %}
        {% endif %}
      {% endfor %}
      {% if hiddenSwatches contains handle %}
          {% comment %} do nothing {% endcomment %}
      {% else %} 
        {% assign swatchProduct = all_products[swatchHandle] %}
        {% assign swatchColor = swatchProduct.metafields.pdp.swatch_color %}
        {% assign swatchImage = swatchProduct.metafields.pdp.swatch_image %}
        <a href="/products/{{ swatchHandle }}" class="{% unless swatchProduct.available %}soldout{%endunless%}{% if swatchHandle == product.handle %} active{%endif%}" style="order: {{swatchPosition}};">
          <span style="{% if swatchImage != blank %}background-image: url({{ swatchImage }});{% else %}background-color: {{ swatchColor }};{% endif %}"></span>
        </a>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}

{% if section.settings.show_payment_button %}
  {% assign show_payment_button = true %}
{% elsif show_payment_button_quickshop %}
  {% assign show_payment_button = true %}
{% else %}
  {% assign show_payment_button = false %}
{% endif %}

{% assign variant = bold_selected_or_first_available_variant %}
{%- include 'bold-variant' with variant, output: 'none' -%}

<div class="clearfix product_form init smart-payment-button--{{ show_payment_button }} product_form_options product_form--{{ settings.product_form_style }}"
      id="product-form-{{ product.id }}"
      data-product-form
      data-money-format="{{ shop.money_format }}"
      data-shop-currency="{{ shop.currency }}"
      data-select-id="product-select-{{ product.id }}{{ product-form }}{{ section.id }}{{ block.id }}"
      data-enable-state="{% if template contains 'product' %}true{% else %}false{% endif %}"
      data-product="{%- include 'bold-product', output: 'json', escape: true -%}"
      {% if settings.limit_quantity or settings.display_inventory_left %}
        data-variant-inventory='[{%- for v in product.variants -%}{"id":{{v.id}},"inventory_quantity":{{v.inventory_quantity}},"inventory_management":"{{v.inventory_management}}","inventory_policy":"{{v.inventory_policy}}"}{% if forloop.last == false %},{% endif %}{%- endfor -%}]'
      {% endif %}
      data-product-id="{{ product.id }}"
      >
  {% form 'product', product, data-productid: {{product.id}} %}

  {% if product.options.size > 1 %}
    <div class="select">
      <select data-productid="{{product.id}}" id="product-select-{{ product.id }}{{ product-form }}{{ section.id }}{{ block.id }}" name='id' class="multi_select" >
        {% for v in product.variants %}
        {% include 'bold-variant' with variant, hide_action: 'skip' %}
          <option {% if v == variant %}selected="selected"{% endif %} value="{{ v.id }}" data-sku="{{ v.sku }}">{{ v.title }}</option>
        {% endfor %}
      </select>
    </div>
  {% elsif product.options.size == 1 and bold_variants_size > 1 or product.options.size == 1 and product.options[0] != "Title" %}
    <div class="select">
      <label>{{ product.options[0] }}</label>
      <select data-productid="{{product.id}}" id="product-select-{{ product.id }}{{ product-form }}{{ section.id }}{{ block.id }}" name='id'>
        {% for v in product.variants %}
        {% include 'bold-variant' with variant, hide_action: 'skip' %}
          <option {% if v == variant %}selected="selected"{% endif %} value="{{ v.id }}" data-sku="{{ v.sku }}">{{ v.title }}</option>
        {% endfor %}
      </select>
    </div>
  {% else %}
    <input type="hidden" data-productid="{{product.id}}" name='id' value="{{ variant.id }}" />
  {% endif %}

  {% if settings.product_form_style == "swatches" and bold_variants_size > 1 or settings.product_form_style == "swatches" and product.options[0] != "Title" %}
    <div class="swatch_options">
      {% for option in product.options %}
        {% include 'product-swatch' with option %}
      {% endfor %}
    </div>
  {% endif %}
  
 
  {% if product.available %}
  {% include 'subscription-product' %}
  {% endif %} 
 
  

    {% if settings.display_inventory_left %}
      <div class="items_left">
        {% if variant.inventory_management != blank and variant.inventory_quantity > 0 %}
          {% capture items_left_text %}
            {% if variant.inventory_quantity == 1 %}
              {{ 'products.product.items_left_count.one' | t }}
            {% else %}
              {{ 'products.product.items_left_count.other' | t }}
            {% endif %}
          {% endcapture %}
          {% if variant.inventory_quantity <= settings.inventory_threshold %}
            {{ variant.inventory_quantity }} {{ items_left_text }}
          {% endif %}
        {% endif %}
      </div>
    {% endif %}
    
    <div class="inventory-in-stock{% if variant.inventory_policy == "deny" and variant.inventory_quantity == 0%} oos{% endif %}">
      {% if variant.inventory_management != blank and variant.inventory_quantity > 0 or variant.inventory_policy == "continue" %}
        In Stock
      {% else %}
        Out of Stock
      {% endif %}
    </div>

    <div class="purchase-details">
      {% if settings.display_product_quantity %}
        <div class="purchase-details__quantity product-quantity-box">
          <label for="quantity">{{ 'products.product.quantity' | t }}</label>
          <span class="ss-icon product-minus js-change-quantity" data-func="minus"><span class="icon-minus"></span></span>
          <input type="number" min="1" size="2" class="quantity" name="quantity" id="quantity" value="1" {% if settings.limit_quantity and variant.inventory_management != blank and variant.inventory_policy == "deny" %}max="{{ variant.inventory_quantity }}"{% endif %} />
          <span class="ss-icon product-plus js-change-quantity" data-func="plus"><span class="icon-plus"></span></span>
        </div>
      {% endif %}
      <div id="AddToCartContainer" class="purchase-details__buttons purchase-details__spb--{{ show_payment_button }}">
        {% if settings.cart_action == 'reload_page' %}
          <input type="hidden" name="return_to" value="back" />
        {% elsif settings.cart_action == 'redirect_checkout' %}
          <input type="hidden" name="return_to" value="/checkout" />
        {% endif %}

        {% capture add_to_cart_label %}{% if collection_handles contains 'pre-order' %}{{ 'collections.general.pre_order' | t }}{% else %}{{ 'products.product.add_to_cart' | t }}{% endif %}{% endcapture %}
        <button type="submit" name="add" class="action_button add_to_cart {% if show_payment_button %} action_button--secondary {% endif %}" data-label={{ add_to_cart_label | json }}>
          <span class="text">{{ add_to_cart_label }}</span>
          <svg x="0px" y="0px" width="32px" height="32px" viewBox="0 0 32 32" class="checkmark">
            <path fill="none" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" d="M9,17l3.9,3.9c0.1,0.1,0.2,0.1,0.3,0L23,11"/>
          </svg>
        </button>
        {% if show_payment_button %}
          {{ form | payment_button }}
        {% endif %}
      </div>
    </div>

    <div class="shopify-payment-terms">
        {{ form | payment_terms }}
    </div>
{% endform %}

{%- unless bundle_loaded == 'true' -%}
{%- include 'shappify-bdl-load-bundle' -%}
{%- assign bundle_loaded = 'true' -%}
{%- endunless -%} 

</div>