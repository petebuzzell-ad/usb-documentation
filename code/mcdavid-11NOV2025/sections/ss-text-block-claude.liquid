{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign background_color = section.settings.background_color
  assign background_gradient = section.settings.background_gradient
  assign content_width = section.settings.content_width

  assign gap = section.settings.gap
  assign gap_mobile = section.settings.gap_mobile

  assign image = section.settings.image
  assign image_width = section.settings.image_width
  assign image_width_mobile = section.settings.image_width_mobile
  assign image_radius = section.settings.image_radius
  assign image_custom = section.settings.image_custom
  assign image_height_desktop = section.settings.image_height_desktop
  assign image_height_mobile = section.settings.image_height_mobile
  assign image_ration = section.settings.image_ration
  assign image_location = section.settings.image_location
  assign image_location_mobile = section.settings.image_location_mobile
  assign image_object_fit = section.settings.image_object_fit
  assign image_max_width_mobile = section.settings.image_max_width_mobile

  assign content_padding_horizontal = section.settings.content_padding_horizontal
  assign content_padding_vertical = section.settings.content_padding_vertical
  assign content_radius = section.settings.content_radius
  assign content_bg = section.settings.content_bg
  
-%}

{%- style -%}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    max-width: {{ content_width }}rem;
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .text-block-inner-{{ section.id }} {
    display: flex;
    align-items: center;
    flex-direction: {{ image_location_mobile }};
    width: 100%;
    max-width: 100%;
  }

  .text-block-content-{{ section.id }} {
    width: 100%;
    max-width: 100%;
    padding: {{ content_padding_vertical | times: 0.75 | round: 0 }}px {{ content_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ content_radius }}px;
    background-color: {{ content_bg }};
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .text-block-inner-{{ section.id }} {
      flex-direction: {{ image_location }};
    } 
    
    .text-block-content-{{ section.id }} {
      padding: {{ content_padding_vertical }}px {{ content_padding_horizontal }}px;
    }
  }
  
{%- endstyle -%}

{% if image != blank %}
  <style>

    .text-block-inner-{{ section.id }} {
      gap: {{ gap_mobile }}px;
    }

    .text-block-image-{{ section.id }} {
      border-radius: {{ image_radius }}px;
      width: {{ image_width_mobile }}%;
      max-width: {{ image_max_width_mobile }}%;
      overflow: hidden;
    }
    
    .text-block-image-{{ section.id }} img {
      width: 100%;
      height: 100%;
      max-width: 100%;
      display: block;
      object-fit: {{ image_object_fit }};
      border-radius: {{ image_radius }}px;
    }
    

    @media(min-width: 768px) {
      .text-block-image-{{ section.id }} {
        flex: 1 1 {{ image_width }}%;
        width: auto;
        max-width: none;
      }
      
      .text-block-content-{{ section.id }} {
        flex: 1 1 {{ 100 | minus: image_width }}%;
      }
    }
    
    @media(min-width: 1024px) {
      .text-block-inner-{{ section.id }} {
        gap: {{ gap }}px;
      }
    }
    
  </style>
{% endif %}

{% if image_custom %}

  <style>
    .text-block-image-{{ section.id }} {
      height: {{ image_height_mobile }}px;
    }
    @media(min-width: 1024px) {
      .text-block-image-{{ section.id }} {
        height: {{ image_height_desktop }}px;
      }
    }
  </style>
  
{% endif %}

{% if image_custom == false and image_ration == "square" %}
  <style>
    .text-block-image-{{ section.id }} {
      aspect-ratio: 1 / 1;
    }
  </style>
{% elsif image_custom == false and image_ration == "portrait" %}
  <style>
    .text-block-image-{{ section.id }} {
      aspect-ratio: 1 / 1.3;
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  {% case block.type %}
    
    {% when 'subtitle' %}
      <style>
        {{ block.settings.subtitle_font | font_face: font_display: 'swap' }}
        
        .text-block-subtitle-{{ block.id }} {
          margin: 0px;
          margin-top: {{ block.settings.subtitle_mt | times: 0.75 | round: 0 }}px;
          font-size: {{ block.settings.subtitle_size | times: 0.85 }}px;
          font-weight: 500;
          color: {{ block.settings.subtitle_color }};
          line-height: {{ block.settings.subtitle_height }}%;
          text-transform: unset;
          text-align: {{ block.settings.subtitle_align }};
        }
        
        @media(min-width: 1024px) {
          .text-block-subtitle-{{ block.id }} {
            margin-top: {{ block.settings.subtitle_mt }}px;
            font-size: {{ block.settings.subtitle_size }}px;
          }
        }
      </style>

      {% if block.settings.subtitle_custom %}
        <style>
          .text-block-subtitle-{{ block.id }} {
            font-family: {{ block.settings.subtitle_font.family }}, {{ block.settings.subtitle_font.fallback_families }};
            font-weight: {{ block.settings.subtitle_font.weight }};
            font-style: {{ block.settings.subtitle_font.style }};
          }
        </style>
      {% endif %}

    {% when 'title' %}
      <style>
        {{ block.settings.title_font | font_face: font_display: 'swap' }}
        
        .text-block-title-{{ block.id }} {
          margin: 0px;
          margin-top: {{ block.settings.title_mt | times: 0.75 | round: 0 }}px;
          font-size: {{ block.settings.title_size | times: 0.85 }}px;
          font-weight: 700;
          color: {{ block.settings.title_color }};
          line-height: {{ block.settings.title_height }}%;
          text-transform: unset;
          text-align: {{ block.settings.title_align }};
        }
        
        @media(min-width: 1024px) {
          .text-block-title-{{ block.id }} {
            margin-top: {{ block.settings.title_mt }}px;
            font-size: {{ block.settings.title_size }}px;
          }
        }
      </style>

      {% if block.settings.title_custom %}
        <style>
          .text-block-title-{{ block.id }} {
            font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
            font-weight: {{ block.settings.title_font.weight }};
            font-style: {{ block.settings.title_font.style }};
          }
        </style>
      {% endif %}

        {% when 'text' %}
      <style>
        {{ block.settings.text_font | font_face: font_display: 'swap' }}

        .text-block-text-{{ block.id }} {
          margin-top: {{ block.settings.text_mt | times: 0.75 | round: 0 }}px;
          text-align: {{ block.settings.text_align }}; 
        }
        
        .text-block-text-{{ block.id }} p,
        .text-block-text-{{ block.id }} a,
        .text-block-text-{{ block.id }} li {
          margin: 0px;
          font-size: {{ block.settings.text_size | times: 0.85 }}px;
          color: {{ block.settings.text_color }};
          line-height: {{ block.settings.text_height }}%;
          text-transform: unset;
          text-decoration: none;
        }
        
        @media(min-width: 1024px) {
          .text-block-text-{{ block.id }} {
            margin-top: {{ block.settings.title_mt }}px;
          }
          
          .text-block-text-{{ block.id }} p,
          .text-block-text-{{ block.id }} a,
          .text-block-text-{{ block.id }} li {
            font-size: {{ block.settings.title_size }}px;
          }
        }
      </style>

      {% if block.settings.text_custom %}
        <style>
          .text-block-text-{{ block.id }} p,
          .text-block-text-{{ block.id }} a,
          .text-block-text-{{ block.id }} li {
            font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
            font-weight: {{ block.settings.text_font.weight }};
            font-style: {{ block.settings.text_font.style }};
          }
        </style>
      {% endif %}

    {% when 'button' %}
      <style>
        {{ block.settings.btn_font | font_face: font_display: 'swap' }}
        
        .text-block-btn-{{ block.id }} {
          padding: {{block.settings.btn_padding_vertical}}px {{block.settings.btn_padding_horizontal}}px;
          display: block;
          width: 100%;
          max-width: {{ block.settings.btn_width }}px;
          text-align: center;
          margin: 0px;
          margin-top: {{ block.settings.btn_mt | times: 0.75 | round: 0 }}px;
          font-size: {{ block.settings.btn_size | times: 0.85 }}px;
          font-weight: 500;
          line-height: {{ block.settings.btn_height }}%;
          color: {{ block.settings.btn_color }};
          background-color: {{ block.settings.btn_bg_color }};
          border: {{ block.settings.btn_border_thickness }}px solid {{ block.settings.btn_border_color }};
          border-radius: {{ block.settings.btn_radius }}px;
          text-transform: unset;
          text-decoration: none;
          transition: all 0.2s ease 0s;
        }

        .text-block-btn-{{ block.id }}:hover {
          transition: all 0.2s ease 0s;
          color: {{ block.settings.btn_hover_color }};
          border-color: {{ block.settings.btn_border_hover_color }};
          background-color: {{ block.settings.btn_bg_hover_color }};
        }
        
        @media(min-width: 1024px) {
          .text-block-btn-{{ block.id }} {
            margin-top: {{ block.settings.btn_mt }}px;
            font-size: {{ block.settings.btn_size }}px;
          }
        }
      </style>

      {% if block.settings.btn_custom %}
        <style>
          .text-block-btn-{{ block.id }} {
            font-family: {{ block.settings.btn_font.family }}, {{ block.settings.btn_font.fallback_families }};
            font-weight: {{ block.settings.btn_font.weight }};
            font-style: {{ block.settings.btn_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.btn_align == "center" %}
        <style>
          .text-block-btn-{{ block.id }} {
            margin-left: auto;
            margin-right: auto;
          }
        </style>
      {% elsif block.settings.btn_align == "right" %}
        <style>
          .text-block-btn-{{ block.id }} {
            margin-left: auto;
          }
        </style>
      {% endif %}

    {% when 'button_group' %}
      <style>
        {{ block.settings.btn_font_1 | font_face: font_display: 'swap' }}
        {{ block.settings.btn_font_2 | font_face: font_display: 'swap' }}
        
        .text-block-btn-group-{{ block.id }} {
          display: flex;
          flex-wrap: wrap;
          gap: {{ block.settings.btn_gap | times: 0.75 | round: 0 }}px;
          margin-top: {{ block.settings.btn_group_mt | times: 0.75 | round: 0 }}px;
        }

        .text-block-btn-group-{{ block.id }}.align-center {
          justify-content: center;
        }

        .text-block-btn-group-{{ block.id }}.align-left {
          justify-content: flex-start;
        }

        .text-block-btn-group-{{ block.id }}.align-right {
          justify-content: flex-end;
        }
        
        .text-block-btn-group-{{ block.id }} a {
          padding: {{block.settings.btn_padding_vertical}}px {{block.settings.btn_padding_horizontal}}px;
          display: inline-block;
          text-align: center;
          margin: 0px;
          font-size: {{ block.settings.btn_size | times: 0.85 }}px;
          font-weight: 500;
          line-height: {{ block.settings.btn_height }}%;
          border-radius: {{ block.settings.btn_radius }}px;
          text-transform: unset;
          text-decoration: none;
          transition: all 0.2s ease 0s;
          white-space: nowrap;
        }

        .text-block-btn-group-{{ block.id }} .btn-primary {
          color: {{ block.settings.btn_color_1 }};
          background-color: {{ block.settings.btn_bg_color_1 }};
          border: {{ block.settings.btn_border_thickness }}px solid {{ block.settings.btn_border_color_1 }};
        }

        .text-block-btn-group-{{ block.id }} .btn-primary:hover {
          color: {{ block.settings.btn_hover_color_1 }};
          border-color: {{ block.settings.btn_border_hover_color_1 }};
          background-color: {{ block.settings.btn_bg_hover_color_1 }};
        }

        .text-block-btn-group-{{ block.id }} .btn-secondary {
          color: {{ block.settings.btn_color_2 }};
          background-color: {{ block.settings.btn_bg_color_2 }};
          border: {{ block.settings.btn_border_thickness }}px solid {{ block.settings.btn_border_color_2 }};
        }

        .text-block-btn-group-{{ block.id }} .btn-secondary:hover {
          color: {{ block.settings.btn_hover_color_2 }};
          border-color: {{ block.settings.btn_border_hover_color_2 }};
          background-color: {{ block.settings.btn_bg_hover_color_2 }};
        }
        
        @media(min-width: 1024px) {
          .text-block-btn-group-{{ block.id }} {
            gap: {{ block.settings.btn_gap }}px;
            margin-top: {{ block.settings.btn_group_mt }}px;
          }

          .text-block-btn-group-{{ block.id }} a {
            font-size: {{ block.settings.btn_size }}px;
          }
        }
      </style>

      {% if block.settings.btn_custom_1 %}
        <style>
          .text-block-btn-group-{{ block.id }} .btn-primary {
            font-family: {{ block.settings.btn_font_1.family }}, {{ block.settings.btn_font_1.fallback_families }};
            font-weight: {{ block.settings.btn_font_1.weight }};
            font-style: {{ block.settings.btn_font_1.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.btn_custom_2 %}
        <style>
          .text-block-btn-group-{{ block.id }} .btn-secondary {
            font-family: {{ block.settings.btn_font_2.family }}, {{ block.settings.btn_font_2.fallback_families }};
            font-weight: {{ block.settings.btn_font_2.weight }};
            font-style: {{ block.settings.btn_font_2.style }};
          }
        </style>
      {% endif %}

    {% when "image" %}
      <style>
        .text-block-image-{{ block.id }} {
          display: block;
          margin-top: {{ block.settings.image_mt | times: 0.75 | round: 0 }}px;
          border-radius: {{ block.settings.image_radius }}px;
          width: {{ block.settings.image_width_mobile }}%;
          max-width: 100%;
          height: auto;
          object-fit: {{ block.settings.image_object_fit }};
        }

        @media(min-width: 1024px) {
          .text-block-image-{{ block.id }} {
            margin-top: {{ block.settings.image_mt }}px;
            width: {{ block.settings.image_width_desktop }}%;
          }
        }
      </style>

      {% if block.settings.image_align == "center" %}
        
        <style>
           .text-block-image-{{ block.id }} {
             margin-left: auto;
             margin-right: auto;
           }
        </style>
        
      {% elsif block.settings.image_align == "right" %}
        
        <style>
           .text-block-image-{{ block.id }} {
             margin-left: auto;
           }
        </style>
        
      {% endif %}
  {% endcase %}
{% endfor %}

<div class="section-{{ section.id }} text-block-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings text-block-inner-{{ section.id }}">

      {% if image != blank %}
        <div class="text-block-image-{{ section.id }}">
          <img src="{{ image | image_url }}" alt="text-block-image-{{ section.id }}">
        </div>
      {% endif %}

      <div class="text-block-content-{{ section.id }}">
        {% for block in section.blocks %}
          
          {% case block.type %}
            {% when 'subtitle' %}

              <p class="text-block-subtitle-{{ block.id }}">{{ block.settings.subtitle }}</p>
        
            {% when 'title' %}

              <h2 class="text-block-title-{{ block.id }}">{{ block.settings.title }}</h2>
          
            {% when 'text' %}

              <div class="text-block-text-{{ block.id }}">
                {{ block.settings.text }}
              </div>
        
            {% when 'button' %}

              <a href="{{ block.settings.btn_url }}" class="text-block-btn-{{ block.id }}">{{ block.settings.btn }}</a>

            {% when 'button_group' %}

              <div class="text-block-btn-group-{{ block.id }} align-{{ block.settings.btn_group_align }}">
                {% if block.settings.btn_text_1 != blank %}
                  <a href="{{ block.settings.btn_url_1 }}" class="btn-primary">{{ block.settings.btn_text_1 }}</a>
                {% endif %}
                {% if block.settings.btn_text_2 != blank %}
                  <a href="{{ block.settings.btn_url_2 }}" class="btn-secondary">{{ block.settings.btn_text_2 }}</a>
                {% endif %}
              </div>

            {% when 'image' %}

              <img class="text-block-image-{{ block.id }}" src="{{ block.settings.image | image_url }}" alt="text-block-image-{{ block.id }}">
      
          {% endcase %}
          
        {% endfor %}
      </div>
    </div>
</div>

{% schema %}
  {
    "name": "SS - Text Block",
    "settings": [
      {
        "type": "header",
        "content": "Section Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image - Optional"
      },
      {
        "type": "range",
        "id": "image_width",
        "min": 20,
        "max": 80,
        "step": 5,
        "unit": "%",
        "label": "Image Width - Desktop",
        "default": 20
      },
      {
        "type": "range",
        "id": "image_width_mobile",
        "min": 50,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Image Width - Mobile",
        "default": 100,
        "info": "Width of image container on mobile"
      },
      {
        "type": "range",
        "id": "image_max_width_mobile",
        "min": 50,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Image Max Width - Mobile",
        "default": 100,
        "info": "Maximum width to prevent overflow on mobile"
      },
      {
        "type": "select",
        "id": "image_object_fit",
        "label": "Image Fit",
        "default": "cover",
        "info": "How image fills its container",
        "options": [
          {
            "label": "Cover (fills container, may crop)",
            "value": "cover"
          },
          {
            "label": "Contain (fits inside, may have gaps)",
            "value": "contain"
          },
          {
            "label": "Fill (stretches to fit)",
            "value": "fill"
          },
          {
            "label": "Scale Down (shrinks if needed)",
            "value": "scale-down"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "image_custom",
        "label": "Use Custom Height"
      },
      {
        "type": "range",
        "id": "image_height_desktop",
        "min": 100,
        "max": 600,
        "step": 10,
        "unit": "px",
        "label": "Image Height Desktop",
        "default": 400
      },
      {
        "type": "range",
        "id": "image_height_mobile",
        "min": 50,
        "max": 600,
        "step": 10,
        "unit": "px",
        "label": "Image Height Mobile",
        "default": 200
      },
      {
        "type": "range",
        "id": "image_radius",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Image Border Radius",
        "default": 12
      },
      {
        "type": "select",
        "id": "image_ration",
        "label": "Image Aspect Ratio - Desktop",
        "default": "none",
        "info": "When not selected 'Use Custom Height'",
        "options": [
         {
            "label": "None",
            "value": "none"
          },
          {
            "label": "Square",
            "value": "square"
          },
          {
            "label": "Portrait",
            "value": "portrait"
          }
        ]
      },
      {
        "type": "select",
        "id": "image_location",
        "options": [
          {
            "label": "Left",
            "value": "row"
          },
          {
            "label": "Right",
            "value": "row-reverse"
          }
        ],
        "label": "Image Location",
        "default": "row"
      },
      {
        "type": "select",
        "id": "image_location_mobile",
        "options": [
          {
            "label": "Top",
            "value": "column"
          },
          {
            "label": "Bottom",
            "value": "column-reverse"
          }
        ],
        "label": "Image Location - Mobile",
        "default": "column"
      },
      {
        "type": "header",
        "content": "Section Content"
      },
      {
        "type": "range",
        "id": "content_padding_horizontal",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Content Padding Horizontal",
        "default": 40
      },
      {
        "type": "range",
        "id": "content_padding_vertical",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Content Padding Vertical",
        "default": 40
      },
      {
        "type": "range",
        "id": "content_radius",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Content Border Radius",
        "default": 40
      },
      {
        "type": "header",
        "content": "Section Layout"
      },
      {
        "type": "range",
        "id": "gap",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Gap - Desktop",
        "info": "If Selected Image",
        "default": 30
      },
      {
        "type": "range",
        "id": "gap_mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Gap - Mobile",
        "info": "If Selected Image",
        "default": 15
      },
      {
        "type": "header",
        "content": "Section Colors"
      },
      {
        "type": "color",
        "label": "Section background",
        "id": "background_color",
        "default": "#F5F5F5"
      },
      {
        "type": "color_background",
        "id": "background_gradient",
        "label": "Section background gradient"
      },
      {
        "type": "color",
        "label": "Border",
        "id": "border_color",
        "default": "#000000"
      },
      {
        "type": "color",
        "label": "Content Background Color",
        "id": "content_bg"
      },
      {
        "type": "header",
        "content": "Section margin (outside)"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin top",
        "default": 0
      },
