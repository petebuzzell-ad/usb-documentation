<style>
  {% assign colors = "Black,Blue,Pink,Red,Yellow,Orange,Grey,White,Green,Silver,Brown" %}
  {% assign colors_split = colors | split: ',' %}
  {% for color in colors_split %}
  {% assign color_downcase = color| downcase %}
  {% assign colorName = 'color-' | append: color_downcase | append: '.png' %}
  .boost-sd__filter-option-swatch-item .boost-sd__filter-option-item-button[title="{{color}}"] .boost-sd__filter-option-swatch-item-img {
    background-image: url({{ colorName | file_img_url }}) !important;
  }
  {% endfor %}
</style>

{% if section.settings.featured_collection_image %}
  {% capture sizes %}100x,480x,765x,1400x,2048x{% endcapture %}
  {% assign sizes = sizes | split: ',' %}

  <header class="banner center page_banner dark-overlay-{{ section.settings.image_darken }}">
    <img
          {% if collection.image %}
            src="{{ collection.image | img_url: sizes.first }}"
            data-src="{{ collection.image | img_url: sizes.last }}"
          {%- elsif section.settings.image -%}
            src="{{ section.settings.image | img_url: sizes.first }}"
            data-src="{{ section.settings.image | img_url: sizes.last }}"
          {%- else %}
            src="{{ collection.products.first.featured_image | product_img_url: sizes.first }}"
            data-src="{{ collection.products.first.featured_image | product_img_url: sizes.last }}"
          {% endif %}
          alt="{{ collection.title | escape }}"
          class="lazyload {{ settings.image_loading_style }}"
          sizes="100vw"
          srcset="{%- for size in sizes -%}
                    {%- if collection.image -%}
                      {{ collection.image | img_url: size }}
                    {%- elsif section.settings.image -%}
                      {{ section.settings.image | img_url: size, format: 'pjpg' }}
                    {%- else -%}
                      {{ collection.products.first.featured_image | product_img_url: size }}
                    {%- endif -%}
                    {{ size | replace: "x", "w" }}{% unless forloop.last %},{% endunless %}
                  {%- endfor -%}
          " />
      {% if section.settings.display_collection_title %}
        <div class="caption captionOverlay--true">
          <h1 class="bc-sf-filter-collection-title headline">{{ collection.title }}</h1>
        </div>
      {% endif %}
  </header>
{% endif %}
{% if collection.metafields.global.collection_hero != blank or collection.metafields.global.collection_hero_m != "" %}
<div class="collection-hero {% if collection.metafields.global.collection_hero == blank %}d-hide{% endif %} {% if collection.metafields.global.collection_hero_m == blank %}mobile-hide{% endif %}">
  {% if collection.metafields.global.collection_hero != blank %}
  <div class="image-lg">
  	<img src="{{ collection.metafields.global.collection_hero }}" alt="{{ collection.metafields.global.collection_hero_alt }}">
  </div>
  {% endif %}
  {% if collection.metafields.global.collection_hero_m != "" %}
  <div class="image-sm">
  	<img src="{{ collection.metafields.global.collection_hero_m }}" alt="{{ collection.metafields.global.collection_hero_alt }}">
  </div>
  {% endif %}
  <div class="container">
    <div class="clearfix breadcrumb-collection mobile-hide">
      {% if section.settings.collection_breadcrumb %}
        <div class="columns breadcrumb_text" itemscope itemtype="http://schema.org/BreadcrumbList">
          <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="{{ shop.url }}" title="{{ shop.name | escape }}" itemprop="item" class="breadcrumb_link"><span itemprop="name">{{ 'general.breadcrumbs.home' | t }}</span></a><meta itemprop="position" content="1" /></span>
          <span class="breadcrumb-divider">/</span>
          <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="/collections/{% if collection.handle != blank %}{{ collection.handle }}{% else %}all{% endif %}" title="{{ collection.title | escape }}" itemprop="item" class="breadcrumb_link"><span itemprop="name">{{ collection.title }}</span></a><meta itemprop="position" content="2" /></span>
          {% if current_tags %}
            {% for tag in current_tags %}
              {% unless tag contains 'meta-' %}
                <span class="breadcrumb-divider">/</span>
                <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="/collections/{% if collection.handle != blank %}{{ collection.handle }}{% else %}all{% endif %}/{{ tag | handleize }}" title="{{ tag | escape }}" itemprop="item"><span itemprop="name">{{ tag }}</span></a><meta itemprop="position" content="{{ forloop.index | plus: 2 }}" /></span>
              {% endunless %}
            {% endfor %}
          {% endif %}

          <span id="bc-sf-filter-top-pagination"></span>
        </div>
      {% endif %}
    </div>

    {% if section.settings.display_collection_title %}
      <div class="section clearfix">
        <div class="columns">        
          {% if collections.tags !="" %}
            <h1 id="bc-sf-filter-collection-title">{{ collection.title }}</h1>
          {% endif %}
          {% if current_tags contains tag %}
            {% for tag in collection.tags %}
              {% if current_tags contains tag %}
                  <h1 id="bc-sf-filter-collection-title">{{ tag | downcase | capitalize }}</h1>
                  {% break %}
              {% endif %}
            {% endfor %}
          {% endif %}        
        </div>
      </div>
    {% endif %}
  </div>
</div>
{% endif %}
<a name="pagecontent" id="pagecontent"></a>

<div class="container">
  {% paginate collection.products by section.settings.pagination_limit %}    
    <div class="clearfix breadcrumb-collection {% if collection.metafields.global.collection_hero != blank %}d-hide{% endif %}">
      {% if section.settings.collection_breadcrumb %}
        <div class="eight columns breadcrumb_text medium-down--one-whole" itemscope itemtype="http://schema.org/BreadcrumbList">
          <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="{{ shop.url }}" title="{{ shop.name | escape }}" itemprop="item" class="breadcrumb_link"><span itemprop="name">{{ 'general.breadcrumbs.home' | t }}</span></a><meta itemprop="position" content="1" /></span>
          <span class="breadcrumb-divider">/</span>
          <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="/collections/{% if collection.handle != blank %}{{ collection.handle }}{% else %}all{% endif %}" title="{{ collection.title | escape }}" itemprop="item" class="breadcrumb_link"><span itemprop="name">{{ collection.title }}</span></a><meta itemprop="position" content="2" /></span>
          {% if current_tags %}
            {% for tag in current_tags %}
              {% unless tag contains 'meta-' %}
                <span class="breadcrumb-divider">/</span>
                <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="/collections/{% if collection.handle != blank %}{{ collection.handle }}{% else %}all{% endif %}/{{ tag | handleize }}" title="{{ tag | escape }}" itemprop="item"><span itemprop="name">{{ tag }}</span></a><meta itemprop="position" content="{{ forloop.index | plus: 2 }}" /></span>
              {% endunless %}
            {% endfor %}
          {% endif %}

          {% comment %}<span id="bc-sf-filter-top-pagination"></span>{% endcomment %}
        </div>
      {% endif %}
    </div>
    <div class="section clearfix">
      {% if section.settings.display_collection_title and section.settings.featured_collection_image == false %}
        <div class="eight columns">
          <div class=" {% if collection.metafields.global.collection_hero != blank %}d-hide{% endif %} {% if collection.metafields.global.collection_hero_m != blank %}mobile-hide{% endif %}">
          
          {% if collections.tags !="" %}
          	<h1 id="bc-sf-filter-collection-title">{{ collection.title }}</h1>
          {% endif %}
          {% if current_tags contains tag %}
          	{% for tag in collection.tags %}
    			{% if current_tags contains tag %}
      				<h1 id="bc-sf-filter-collection-title">{{ tag | downcase | capitalize }}</h1>
      				{% break %}
    			{% endif %}
  			{% endfor %}
		  {% endif %}
          </div>
        </div>
      {% endif %}
    </div>

    {% assign sidebar = true %}

    {% comment %}
    <div id="bc-sf-filter-tree-mobile"></div>
    <div class="sidebar four columns">
      <div class="sidebar-wrap">
        <div id="bc-sf-filter-tree">&nbsp;</div>
      </div>
    </div>

    <div class="twelve columns">

      <div id="bc-sf-filter-products" itemtype="http://schema.org/ItemList" class="product-list collection-matrix clearfix" data-bc-sort="{{ collection.default_sort_by }}">
        {% if collection.default_sort_by != 'best-selling' %}
          {% assign products_per_row = section.settings.products_per_row %}
          {% include 'product-loop', sidebar: sidebar %}
        {% endif %}
      </div>

      <div class="twelve columns">
        <div class="section clearfix">
          <div class="paginate" id="bc-sf-filter-bottom-pagination"></div>
          <div id="bc-sf-filter-load-more"></div>
        </div>
      </div>

      {% if collection.description != blank %}
        <div class="clearfix"></div>
        <div id="bc-sf-filter-collection-description" class="section clearfix collection_description">
          {{ collection.description }}
        </div>
      {% endif %}

    </div>
    {% endcomment %}
  {% endpaginate %}

</div>

{% comment %}
