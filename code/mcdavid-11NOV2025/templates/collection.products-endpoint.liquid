{% layout none %}
{% paginate collection.products by 50 %}
  {
    "products":
      [
        {% for product in collection.products %}
{%- include 'bold-product' with product, hide_action: 'skip' -%}
          {
            "id":{{ product.id }},
            "position":{{ forloop.index }},
            "metafields":[
              
              {% comment %}
                Single Metafield
              {% endcomment %}
              {% assign v_reviews-aggregate-ratings = product.metafields.bazaarvoice["reviews-aggregate-ratings"] %}
              {% if v_reviews-aggregate-ratings != blank %}
                {
                  "namespace": "bazaarvoice",
                  "key": "reviews-aggregate-ratings",
                  "value": {{ v_reviews-aggregate-ratings | json }}
                },
              {% endif %}
        
            ]
          },
        {% endfor %}
      ]
  }
{% endpaginate %}