{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sms-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.hero_height }}px;}

  @media screen and (max-width: 749px) {
    .ai-sms-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height_mobile }}px;
    }
  }

  .ai-sms-hero__image-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-sms-hero__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-sms-hero__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;}

  .ai-sms-hero__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-sms-hero__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-sms-hero__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: {{ block.settings.content_width }}px;
    padding: 20px;
    text-align: {{ block.settings.text_alignment }};
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-sms-hero__text-container-{{ ai_gen_id }} {
    {% if block.settings.text_position == 'left' %}
    align-self: flex-start;
    {% elsif block.settings.text_position == 'right' %}
    align-self: flex-end;
    {% else %}
    align-self: center;
    {% endif %}
    max-width: {{ block.settings.text_max_width }}px;
  }

  .ai-sms-hero__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin-top: 0;
    margin-bottom: 15px;
  }

  @media screen and (max-width: 749px) {
    .ai-sms-hero__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }
  }

  .ai-sms-hero__subtext-{{ ai_gen_id }} {
    color: {{ block.settings.subtext_color }} !important;
    font-size: {{ block.settings.subtext_size }}px;
  }

  .ai-sms-hero__subtext-{{ ai_gen_id }} * {
    color: {{ block.settings.subtext_color }} !important;
    font-size: {{ block.settings.subtext_size }}px !important;
  }

  @media screen and (max-width: 749px) {
    .ai-sms-hero__subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size_mobile }}px !important;
    }
    .ai-sms-hero__subtext-{{ ai_gen_id }} * {
      font-size: {{ block.settings.subtext_size_mobile }}px !important;
    }
  }

  .ai-sms-hero__form-container-{{ ai_gen_id }} {
    {% if block.settings.form_position == 'left' %}
    align-self: flex-start;
    {% elsif block.settings.form_position == 'right' %}
    align-self: flex-end;
    {% else %}
    align-self: center;
    {% endif %}
    max-width: {{ block.settings.form_max_width }}px;
    width: 100%;
  }

  .ai-sms-product-carousel-{{ ai_gen_id }} {
    padding: {{ block.settings.carousel_padding }}px 0;
    background-color: {{ block.settings.carousel_background }};
  }

  .ai-sms-product-carousel__heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 30px;
    color: {{ block.settings.carousel_heading_color }};
    font-size: {{ block.settings.carousel_heading_size }}px;
  }

  .ai-sms-product-carousel__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.carousel_max_width }}px;
    margin: 0 auto;padding: 0 20px;
  }
{% endstyle %}<div class="ai-sms-enrollment-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-sms-hero-{{ ai_gen_id }}">
    <div class="ai-sms-hero__image-container-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 2000 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          loading="lazy"
          class="ai-sms-hero__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-sms-hero__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_overlay %}
      <div class="ai-sms-hero__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-sms-hero__content-{{ ai_gen_id }}">
      <div class="ai-sms-hero__text-container-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-sms-hero__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.subtext != blank %}
          <div class="ai-sms-hero__subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
        {% endif %}
      </div><div class="ai-sms-hero__form-container-{{ ai_gen_id }}">
        {% if block.settings.klaviyo_form_snippet != blank %}
          {{ block.settings.klaviyo_form_snippet }}
        {% endif %}
      </div>
    </div>
  </div>

  {% if block.settings.show_product_carousel %}
    <div class="ai-sms-product-carousel-{{ ai_gen_id }}">
      <div class="ai-sms-product-carousel__container-{{ ai_gen_id }}">
        {% if block.settings.carousel_heading != blank %}
          <h3 class="ai-sms-product-carousel__heading-{{ ai_gen_id }}">{{ block.settings.carousel_heading }}</h3>
        {% endif %}

        {% if block.settings.product_carousel_snippet != blank %}
          {{ block.settings.product_carousel_snippet }}
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

