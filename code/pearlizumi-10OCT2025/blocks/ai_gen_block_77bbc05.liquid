{% doc %}
  @prompt
    I need a section that I can add just a HTML script so it renders a contact us form from Gorgias.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-html-script-container-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.max_width > 0 %}
      max-width: {{ block.settings.max_width }}px;
      margin: 0 auto;
    {% endif %}
  }

  .ai-html-script-content-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-html-script-empty-state-{{ ai_gen_id }} {
    padding: 40px 20px;
    text-align: center;
    color: #666;
    background-color: #f9f9f9;
    border: 2px dashed #ddd;
    border-radius: 8px;
    font-size: 14px;
  }

  .ai-html-script-empty-state-{{ ai_gen_id }} svg {
    width: 48px;
    height: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  @media screen and (max-width: 749px) {
    .ai-html-script-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-html-script-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.html_content != blank %}
    <div class="ai-html-script-content-{{ ai_gen_id }}">
      {{ block.settings.html_content }}
    </div>
  {% else %}
    <div class="ai-html-script-empty-state-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="16 18 22 12 16 6"></polyline>
        <polyline points="8 6 2 12 8 18"></polyline>
      </svg>
      <div>Add your HTML script in the block settings to display your Gorgias contact form</div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "HTML script embed",
  "settings": [
    {
      "type": "header",
      "content": "HTML content"
    },
    {
      "type": "html",
      "id": "html_content",
      "label": "HTML script",
      "info": "Paste your Gorgias contact form HTML script here"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 0,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 0,
      "info": "Set to 0 for full width"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "HTML script embed"
    }
  ]
}
{% endschema %}