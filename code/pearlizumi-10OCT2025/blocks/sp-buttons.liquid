{% assign short_id = block.id | slice: -3, 3 %}

<style>

  

  {%- capture sp_content -%} 

  #sprob-{{ block.id }} {
      position: relative;
      {% if block.settings.block_background_color %}background-image: {{ block.settings.block_background_color }};{% endif %}
      width: 100%;
      box-sizing: border-box;
      padding: {{ block.settings.block_padding_top_bottom }}px {{ block.settings.block_padding_left_right }}px;
      margin: 0 0 {{ block.settings.block_spacing }}px 0;
  }

  @media (max-width: 800px) {
      #sprob-{{ block.id }} {
        padding: {{ block.settings.mobile_block_padding_top_bottom }}px {{ block.settings.mobile_block_padding_left_right }}px;
        margin: 0 0 {{ block.settings.block_spacing }}px 0;
      }
  }

  {% if block.settings.show_on_device == 'mobile' %}
    @media (min-width: 801px) {
        #sprob-{{ block.id }} {
            display: none;
        }
    }
  {% endif %}

  {% if block.settings.show_on_device == 'desktop' %}
    @media (max-width: 800px) {
        #sprob-{{ block.id }} {
            display: none;
        }
    }
  {% endif %}

  #sprob-{{ block.id }} .sprob-container {
      position: relative;
      margin: 0;
      {% if block.settings.container_background_color %}background-image: {{ block.settings.container_background_color }};{% endif %}
      border-radius: {{ block.settings.container_radius }}px;
      {% if block.settings.container_shadow %}
        box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
      {% endif %}
      border: {{ block.settings.container_border_size }}px solid {{ block.settings.container_border_color }};
      max-width: {{ block.settings.container_max_width }}px;
      padding: {{ block.settings.container_padding_top_bottom }}px {{ block.settings.container_padding_left_right }}px;
      overflow: hidden;
  }

  @media (max-width: 800px) {
      #sprob-{{ block.id }} .sprob-container {
      padding: {{ block.settings.mobile_container_padding_top_bottom }}px {{ block.settings.mobile_container_padding_left_right }}px;
      }
  }

  
  #sprob-{{ block.id }} .sprob-button {
    display: inline-block;
    padding: {{ block.settings.button_padding_tb }}px {{ block.settings.button_padding_lr }}px;
    background-image: {{ block.settings.button_background_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    border: {{ block.settings.button_border_size }}px solid {{ block.settings.button_border_color }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_text_size }}px;
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
    transition: .25s all;
    margin: 0 5px 0 0;
    {% if block.settings.button_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}
  }

  #sprob-{{ block.id }} .sprob-button * {
    color: {{ block.settings.button_text_color }};
  }

  {% if block.settings.button_animation %}
    #sprob-{{ block.id }} .sprob-button:hover {
      transform: translateY(-2px);
    }
  {% endif %}

  #sprob-{{ block.id }}  .sprob-button-sec {
    background-image: {{ block.settings.button_background_color_2 }};
    color: {{ block.settings.button_text_color_2 }};
  }

  #sprob-{{ block.id }} .sprob-button-sec * {
    color: {{ block.settings.button_text_color_2 }};
  }

    @media only screen and (min-width: 801px) {
      #sprob-{{ block.id }} {
        {{ block.settings.desktop_css }};
      }
    }
  
    @media only screen and (max-width: 800px) {
      #sprob-{{ block.id }} {
        {{ block.settings.mobile_css }};
      }
    }

    {%- endcapture -%} 

  {%- liquid
    assign chunks = sp_content | strip_newlines | split: ' ' | join: ' ' | split: '*/'
    for chunk in chunks
      assign mini = chunk | split: '/*' | first | strip | replace: ': ', ':' | replace: '; ', ';' | replace: '} ', '}' | replace: '{ ', '{' | replace: ' {', '{' | replace: ';}', '}'
      echo mini
    endfor
  %}
</style>

<div id="sprob-{{ block.id }}" class="sprob-block">
  <div class="sprob-container">
    <div style="margin: 0; padding: 0; text-align: {{ block.settings.alignment }};">
      <a class="sprob-button" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a>
      {% if block.settings.show_secondary_button %}
        <a class="sprob-button sprob-button-sec" href="{{ block.settings.cta_link_2 }}">{{ block.settings.cta_2 }}</a>
      {% endif  %}
    </div>
  </div>
</div>
