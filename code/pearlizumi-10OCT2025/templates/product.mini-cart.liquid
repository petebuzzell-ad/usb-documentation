{% layout none %}
{%- assign color_label = 'color,colour,couleur,cor,colore,farbe,색,色,カラー,färg,farve,szín' | split: ',' -%}
{% assign current_variant = product.selected_or_first_available_variant %}

{% liquid
  if shop.permanent_domain == 'pearlizumi.myshopify.com'
    assign storefront = "US"
  elsif shop.permanent_domain == 'pearlizumi-ca.myshopify.com'
    assign storefront = "CA"
  elsif shop.permanent_domain == 'pearl-izumi-int.myshopify.com'
    assign storefront = "INT"
  endif

  assign CAD_pricing = ""
  if storefront == "CA"
    assign CAD_pricing = " CAD"
  endif
%}

<div class="bg-white w-full shadow-sm">
  <div class="px-4 py-8 sm:px-14 sm:pb-8 sm:pt-6 md:pb-8 md:pt-8 md:px-7 md:py-8 lg:px-12.75 lg:py-8.25">
    <h2 class="text-h4-m lg:text-h4 mb-6 lg:mb-8">Added to Cart</h2>
    <button class="absolute top-5.5 right-5.5" onclick="eHS.miniCart.close()">{% render 'svg-close' width: '28px', height: '28px' %}</button>
    <div class="flex flex-col lg:flex-row">
      <div class="flex mb-8 lg:mb-0 justify-center lg:w-minicart-tablet lg:w-minicart-desktop pr-2.5">
        <img class="w-35 h-35 lg:w-27 lg:h-27 lg:w-45 lg:h-45 object-contain mr-4 lg:mr-3 lg:mr-4 self-start bg-faint-cloud" src="{{ current_variant.image | default: product.featured_image | img_url: '300x' }}" alt="{{ product.title }}">
        <div>
          <div class="text-left">
            <h6 class="text-p-lg mb-1 font-semibold">{{ product.title }}</h6>
            {% if product.metafields["global"]["prd_sub_title"] != blank %}
              <div class="hidden lg:block">
                <p class="p-s font-sora font-normal pt-0 mb-0">{{ product.metafields["global"]["prd_sub_title"] }}</p>
              </div>
            {% endif %}
            <div class="mb-2">
              <span data-price-applied class="text-p leading-5 font-semibold font-sora text-pine mr-1"></span>
              <span data-price-previous class="text-p-s leading-5 font-semibold line-through text-light-stone font-sora"></span>
            </div>
            <p class="uppercase text-special-xs text-stone font-sora font-semibold mb-2">Qty:&nbsp;<span id="miniCartQuantity" data-mini-cart-quantity></span></p>
            {%- for option in product.options -%}
              {%- if option != 'Default Title' -%}
                {%- capture option_index -%}option{{forloop.index}}{%- endcapture -%}
                {%- assign downcased_option = option | downcase -%}
                <p class="uppercase text-special-xs text-stone font-sora font-semibold mb-2 {% if color_label contains downcased_option %} md:max-w-45 {% endif %}">{{- option -}}:&nbsp;{{- current_variant[option_index] -}}</p>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
      <div class="mx-auto lg:ml-auto lg:mr-0 w-full sm:w-full lg:w-329 max-w-full">
        {%- comment -%}
        {%- if settings.free_shipping_enabled_pros or settings.free_shipping_enabled_normals -%}
          {% render 'cart-shipping-widget' %}
        {%- endif -%}
        {%- endcomment -%}
        <a class="button-primary mb-4 font-medium w-full !max-w-full font-semibold" href="/cart">VIEW CART & CHECKOUT</a>
        <button class="button button-outline-dark font-medium w-full !max-w-full font-semibold" onclick="eHS.miniCart.close()">CONTINUE SHOPPING</button>
      </div>
    </div>

    {%- comment -%}
    <div class="border border-light-grey border-l-0 border-r-0 border-b-0 border-t-1 mt-16 pt-10 hidden lg:block">
      <h3 class="text-h6 leading-7 normal-case mb-8">Frequently Bought Together</h3>
      <div id="miniCartRelatedProducts" class="hidden lg:grid grid-flow-col lg:grid-cols-3 1.5xl:grid-cols-4 grid-rows-1 gap-8">

      </div>
    </div>
    {%- endcomment -%}
  </div>
</div>