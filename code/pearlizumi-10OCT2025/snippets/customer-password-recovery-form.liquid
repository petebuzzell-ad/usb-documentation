<div id="RecoverPasswordForm" class="w-full pt-8 pb-10 lg:p-0 lg:max-w-387 lg:mx-auto hidden">
  <h2 class="text-h3-m lg:text-h3 uppercase mb-2 lg:mb-4">{{ 'customer.recover_password.title' | t }}</h2>
  <div class="lg:mb-11 mb-8">
    <p class="text-p-s lg:text-p">{{ 'customer.recover_password.subtext' | t }}</p>
  </div>

  {% form 'recover_customer_password', class: 'account-form text-center mb-15' %}
  {{ form.errors | default_errors }}

  {% if form.posted_successfully? %}
  <span class="hidden recover-password-success"></span>
  {% endif %}

  <div class="relative lg:mb-8 mb-9">
    <input type="email" name="email"
      class="border border-silver focus:border-black text-black text-p font-sora w-full h-12 pt-5 pb-1 px-3 outline-none appearance-none"
      id="RecoverEmail" placeholder=" " spellcheck="false" autocomplete="off" autocapitalize="off"
      onblur="eHS.customerLogin.validateFieldsOnBlur(event)" data-required
    >
    <label for="RecoverEmail">
      {{ 'customer.recover_password.email' | t }}
    </label>
    <div class="text-red flex items-center mt-2 hidden" data-error-container>
      <span class="mr-2.5">
        {% include 'svg-alert' %}
      </span>
      <span class="font-normal text-p-xs text-black" data-error-text></span>
    </div>
  </div>

  <button type="button" class="form-submit button-primary-lg mb-10 w-full max-w-full py-4.5 cursor-pointer">{{ 'customer.recover_password.submit' | t }}</button>

  <a href="javascript:void(0)" class="inline-block text-special mb-8 font-sora font-semibold uppercase text-black hover:text-pine border-b-2 border-black hover:border-pine"
    id="HideRecoverPasswordLink" onclick="eHS.customerLogin.toggleRecoverPasswordForm('remove')">
    {{ 'customer.recover_password.cancel' | t }}
  </a>
  {% endform %}
</div>