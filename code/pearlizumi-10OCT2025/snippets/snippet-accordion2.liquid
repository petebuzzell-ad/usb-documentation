{% assign mb_class = 'mb-0' %}{% if block.settings.enable_bottom_margin %}{% assign mb_class = 'mb-20 md:mb-40' %}{% endif %}
<div data-section-id="{{ block.id }}" data-section-type="accordion" id="section-{{ number }}" class="relative px-6 {{ mb_class }}">
  <div class="w-full max-w-full md:max-w-1200 mx-auto">
    <div class="flex justify-center -mx-2.5">
      <div class="w-full md:w-2/3 px-2.5">
        {% if block.settings.title != blank %}
          <h3 class="uppercase mb-8 md:mb-16 overflow-hidden">
            {%- if underline == true -%}
              <span class="relative">
                <span class="z-1 relative">{{ block.settings.title }}</span>
                <span class="absolute left-0 bottom-0 bg-sand z-0 w-underline-mobile h-4 lg:w-underline-sp-desktop lg:h-5.5"></span>
              </span>
            {%- else -%}
              {{ block.settings.title }}
            {%- endif -%}
          </h3>
        {% endif %}
        <div class="accordion-group">
          {% for i in (1..6) %}
            {% liquid
              assign heading_key = i | prepend: 'accordion_heading_'
              assign content_key = i | prepend: 'accordion_content_'
              assign key = 'heading||content' | split: '||'
              assign variable = block.settings[heading_key] | append: '||' | append: block.settings[content_key] | split: '||'
            %}
            {% if block.settings[heading_key] != blank and block.settings[content_key] != blank %}
              {% include 'shortcode-accordion' variable: variable key: key %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
