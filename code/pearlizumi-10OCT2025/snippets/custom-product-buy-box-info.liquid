{% comment %}
  Buy Box Info - Title, Price, Stock, etc.
    Expected parameters:
      - index
      - product
      - current_variant
{% endcomment %}

<div class="bxl:mb-3.5 text-left">
  {% comment %}<!-- Step Label -->{% endcomment %}
  <p class="font-sora text-p-xs uppercase text-light-stone mt-4 mb-0 mx-0 bxl:mt-6 bxl:mb-2" style="letter-spacing: 0.85px;">Product {{ index | plus: 1 }}</p>

  <div class="flex justify-between items-center pt-2 pb-2.5 flex bxl:items-start">
    {% comment %}Title{% endcomment %}
    <h2 class="pdp-title text-h6-m bxl:text-h5-m font-sora font-semibold text-black tracking-normal m-0 max-w-2/3">
      {{- product.title -}}
    </h2>

    {% comment %}Price{% endcomment %}
    <div class="flex items-end max-w-1/3 bxl:items-center bxl:justify-end bxl:flex-nowrap">
      <span data-compare-price class="text-special-s font-sora font-light line-through tracking-normal align-right mr-2 text-light-stone"></span>
      <span data-product-price class="text-h8-m font-sora font-semibold tracking-normal align-right">{{ current_variant.price | money }}</span>
    </div>
  </div>

  {% if product.metafields["global"]["prd_sub_title"] != blank %}
    {% comment %}Short Description:{% endcomment %}
    <div class="hidden bxl:block">
      <p class="p-s font-sora font-normal pt-2 mb-0">{{ product.metafields["global"]["prd_sub_title"] }}</p>
    </div>
  {% endif %}

</div>