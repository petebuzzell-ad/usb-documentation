      display: grid;
      grid-template-columns: 1fr;
    }

    #spro-{{ section.id }} .spro-grid-top .spro-column-media {
      grid-row: 1;
    }
    #spro-{{ section.id }} .spro-grid-top .spro-column-text {
      grid-row: 2;
    }

    #spro-{{ section.id }} .spro-grid-bottom .spro-column-text {
      grid-row: 1;
    }
    #spro-{{ section.id }} .spro-grid-bottom .spro-column-media {
      grid-row: 2;
    }
  }

  @media only screen and (max-width: 900px) {
    #spro-{{ section.id }} .spro-column-media {
      margin: 0 0 {{ section.settings.grid_gap }}px 0;
    }
  }

  #spro-{{ section.id }} .spro-container img {
