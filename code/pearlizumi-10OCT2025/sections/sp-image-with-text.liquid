      text-align: {{ section.settings.mobile_text_alignment }};
    }
  }

  /* grid */
  #spro-{{ section.id }} .spro-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    align-items: {{ section.settings.grid_vertical_alignament }};
  }

  /* left and right */
  @media only screen and (min-width: 901px) {
    #spro-{{ section.id }} .spro-grid {
      display: grid;
      grid-template-columns: {{ section.settings.grid_display }};
    }

    #spro-{{ section.id }} .spro-grid-left .spro-column-media {
      grid-column: 1;
      grid-row: 1;
    }
    
    #spro-{{ section.id }} .spro-grid-left .spro-column-text {
      grid-column: 2;
      grid-row: 1;
    }

    #spro-{{ section.id }} .spro-grid-right .spro-column-media {
      grid-column: 2;
      grid-row: 1;
    }
    
    #spro-{{ section.id }} .spro-grid-right .spro-column-text {
      grid-column: 1;
      grid-row: 1;
    }
  }

  @media only screen and (max-width: 900px) {
