<div class="fw-social-media-links" id="section-{{ section.id }}">
  <div class="fw-social-media-links__container">
    {% if section.settings.heading != blank %}
      <div class="fw-social-media-links__heading">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {% endif %}
    <div class="fw-social-media-links__links">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {% when 'social_media_link' %}
            <a href="{{ block.settings.link_url }}" class="fw-social-media-links__link" target="_blank">
              <img src="{{ block.settings.icon |  image_url  }}" alt="" width="" height="">
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FW Social Media Links",
  "tag": "section",
  "class": "fw-social-media-links",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow our social media links"
    }
  ],
  "blocks": [
    {
      "type": "social_media_link",
      "name": "Social Media Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FW Social Media Links",
      "blocks": [
        {
          "type": "social_media_link"
        }
      ]
    }
  ]
}
{% endschema %}
