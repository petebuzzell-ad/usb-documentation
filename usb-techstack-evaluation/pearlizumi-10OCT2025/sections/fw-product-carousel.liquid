<div
  class="fw-product-carousel__wrapper"
  id="section-{{ section.id }}"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.font_color }};{% if section.settings.background_image != blank %} background-image: url('{{ section.settings.background_image | img_url: '2048x' }}');{% endif %}"
>
  {%- if section.settings.title != blank -%}
    {% assign title_size = section.settings.title_size %}
    <div class="fw-product-carousel__title fw-product-carousel__title--{{ title_size }}">
      <h2 style="color: {{ section.settings.font_color }};">{{ section.settings.title }}</h2>
    </div>
  {%- endif -%}

  <div class="fw-product-carousel__container">
    <div id="fw-product-carousel-{{ section.id }}" class="fw-product-carousel__track" data-carousel="track">
      {%- for block in section.blocks -%}
        {%- if block.type == 'product_image' -%}
          <div class="fw-product-carousel__card">
            {%- assign product = block.settings.product -%}
            {%- assign image = block.settings.custom_image | default: product.featured_image -%}
            {% assign copy = block.settings.copy %}
            {% if copy != blank %}
              {% assign copy = block.settings.copy %}
            {% else %}
              {% assign copy = product.description | truncatewords: 20 %}
            {% endif %}
            <a href="{{ product.url }}" class="fw-product-carousel__card-link">
              <div class="fw-product-carousel__image-wrapper">
                {%- if image != blank -%}
                  {{ image | img_url: '800x' | img_tag: product.title | escape }}
                {%- endif -%}
              </div>
              <div class="fw-product-carousel__text-wrapper">
                {% if block.settings.heading == blank %}
                  <h3 class="fw-product-carousel__card-title">{{ product.title }}</h3>
                  <p class="fw-product-carousel__card-description">
                    {{ copy | strip_html }}
                  </p>
                {% else %}
                  <div class="fw-product-carousel__card-sub-title">{{ product.title }}</div>
                  <h3 class="fw-product-carousel__card-title fw-product-carousel__card-title--large">
                    {{ block.settings.heading }}
                  </h3>
                  <p class="fw-product-carousel__card-description">
                    {{ copy | strip_html }}
                  </p>
                {% endif %}

                {% if block.settings.cta_text != blank %}
                  <div class="fw-product-carousel__card-cta-text">{{ block.settings.cta_text }}</div>
                {% endif %}
              </div>
            </a>
          </div>
        {%- endif -%}
      {%- endfor -%}
      <div class="fw-product-carousel__card fw-product-carousel__card--blank"></div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    var flickityElem = document.getElementById('fw-product-carousel-{{ section.id }}');
    var flkty = new Flickity(flickityElem, {
      // options
      cellAlign: 'left',
      contain: true,
      groupCells: '100%',
    });
  });
</script>

{% schema %}
{
  "name": "FW Product Carousel",
  "tag": "section",
  "class": "fw-product-carousel",
  "settings": [
    {
      "type": "select",
      "id": "title_size",
      "label": "Title size",
      "default": "regular",
      "options": [
        { "value": "regular", "label": "Regular" },
        { "value": "larger", "label": "Larger" }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Featured products"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#F8F6F1"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "blocks": [
    {
      "type": "product_image",
      "name": "Product with Image",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom Image",
          "info": "Optional: Overrides product featured image if selected"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading (optional)"
        },
        {
          "type": "textarea",
          "id": "copy",
          "label": "Copy (optional)"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA text (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FW Product Carousel",
      "blocks": [
        {
          "type": "product_image"
        }
      ]
    }
  ]
}
{% endschema %}