<div class="fw-visual-features" id="section-{{ section.id }}">
  <div class="fw-visual-features__container">
    <div class="fw-visual-features__copy">
      {% if section.settings.heading != blank %}
        <h3>{{ section.settings.heading }}</h3>
      {% endif %}
      {% if section.settings.copy != blank %}
        {{ section.settings.copy }}
      {% endif %}
    </div>
    {% if section.blocks.size %}
      <ul class="fw-visual-features__features">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'visual_feature' -%}
              <li>
                {% if block.settings.bg_image != blank %}
                  <img
                    src="{{block.settings.bg_image |  image_url: width:800 }}"
                    alt=""
                    class="bg_image"
                    width=""
                    height=""
                  >
                {% endif %}
                {% if block.settings.heading != blank %}
                  <h4>{{ block.settings.heading }}</h4>
                {% endif %}
                {% if block.settings.text != blank %}
                  {{ block.settings.text }}
                {% endif %}
              </li>
          {%- endcase -%}
        {%- endfor -%}
      </ul>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "FW Visual Features",
  "tag": "section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "copy",
      "label": "Copy",
      "default": "<p>Description text here...</p>"
    }
  ],
  "blocks": [
    {
      "type": "visual_feature",
      "name": "Visual Feature",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Rich text",
          "default": "<p>Some description.</p>"
        },
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "BG Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FW Visual Features",
      "blocks": [{ "type": "visual_feature" }]
    }
  ]
}
{% endschema %}
