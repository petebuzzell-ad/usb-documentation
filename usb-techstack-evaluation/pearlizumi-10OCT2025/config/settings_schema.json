  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      },
      {
        "type": "header",
        "content": "Free Shipping",
        "info": "NOTE: These settings only affect the front-end messaging for Free Shipping. The backend component for Free Shipping will be configurable in the Script Editor app."
      },
      {
        "type": "checkbox",
        "id": "free_shipping_enabled_normals",
        "label": "Enable Free Shipping for Non-Pros (when threshold is met)",
        "info": "Free Shipping dependent on threshold below. Note: this does not apply to Rates set in the Shopify settings -- ex. if your default rate is Free Shipping, they will receive free shipping.",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "free_shipping_enabled_pros",
        "label": "Enable Free Shipping for Pros (when threshold is met)",
        "info": "Free Shipping dependent on threshold below.",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "free_shipping_enabled_pro_ev",
        "label": "Enable Free Shipping for Expert Voice (only)",
        "info": "Free Shipping dependent on EV threshold",
        "default": false
      },
      {
        "type": "text",
        "id": "free_shipping_threshold",
        "label": "Free Shipping Threshold (Normal)",
        "info": "Site messaging will show Free Shipping progress based on this purchase threshold (in $) for customers who do not have any customer tags",
        "default": "0"
      },
      {
        "type": "text",
        "id": "free_shipping_threshold_outdoor",
        "label": "Free Shipping Threshold (Outdoor Pro)",
        "info": "Site messaging will show Free Shipping progress based on this purchase threshold (in $) for customers who have 'Outdoor Pro' tags",
        "default": "175"
      },
      {
        "type": "text",
        "id": "free_shipping_threshold_expert",
        "label": "Free Shipping Threshold (Expert Voice)",
        "info": "Site messaging will show Free Shipping progress based on this purchase threshold (in $) for customers who have 'Expert Voice' tags",
        "default": "175"
      },
      {
        "type": "text",
        "id": "free_shipping_threshold_pro",
        "label": "Free Shipping Threshold (Pro Purchase)",
        "info": "Site messaging will show Free Shipping progress based on this purchase threshold (in $) for customers who have 'Pro Purchase' tags",
        "default": "175"
      },
      {
        "type": "text",
        "id": "free_shipping_success",
        "label": "Free Shipping Success Message",
        "default": "Congrats! You get free shipping"
      },
      {
        "type": "text",
        "id": "shipping_taxes_message",
        "label": "Shipping and Taxes Message",
        "info": "Message for non-Pro users",
        "default": "*Shipping & taxes calculated at checkout"
      },
      {
        "type": "checkbox",
        "id": "pro_extra_discount",
