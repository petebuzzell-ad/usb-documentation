{% if settings.share_image and settings.share_image != "" %}
  {%- capture tw_social_image -%}
    {%- comment %}<locksmith:c1c2>{% endcomment -%}
      {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:image" content="http:{{ settings.share_image | img_url: 'master' }}">{% endif -%}
      {%- comment %}original: <meta name="twitter:image" content="http:{{ settings.share_image | img_url: 'master' }}">{%- endcomment %}
    {%- comment %}</locksmith:c1c2>{% endcomment -%}
  {%- endcapture -%}
{% endif %}

{%- if request.page_type == 'product' -%}
  {% if product.media.size > 0 %}
    {%- capture tw_social_image -%}
    {% for media in product.media limit:1 -%}
      {%- comment %}<locksmith:c931>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:image" content="http:{{ media | img_url: 'master' }}">{% endif -%}
        {%- comment %}original: <meta name="twitter:image" content="http:{{ media | img_url: 'master' }}">{%- endcomment %}
      {%- comment %}</locksmith:c931>{% endcomment -%}
    {% endfor -%}
    {%- endcapture -%}
  {% endif %}
{%- elsif request.page_type == 'article' -%}
  {%- if article.image -%}
    {%- capture tw_social_image -%}
      {%- comment %}<locksmith:812d>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:image" content="http:{{ article.image | img_url: 'master' }}">{% endif -%}
        {%- comment %}original: <meta name="twitter:image" content="http:{{ article.image | img_url: 'master' }}">{%- endcomment %}
      {%- comment %}</locksmith:812d>{% endcomment -%}
    {%- endcapture -%}
  {%- endif -%}
{%- elsif request.page_type == 'collection' -%}
  {%- if collection.image -%}
    {%- capture tw_social_image -%}
      {%- comment %}<locksmith:521b>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:image" content="http:{{ collection.image | img_url: 'master' }}">{% endif -%}
        {%- comment %}original: <meta name="twitter:image" content="http:{{ collection.image | img_url: 'master' }}">{%- endcomment %}
      {%- comment %}</locksmith:521b>{% endcomment -%}
    {%- endcapture -%}
  {%- endif -%}
{%- endif -%}

{%- unless tw_social_image -%}
  {% if avada_seo_social_image and avada_seo_social_image != "" %}
    {%- capture tw_social_image -%}
      {%- comment %}<locksmith:5ad2>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:image" content="{{ avada_seo_social_image }}">{% endif -%}
        {%- comment %}original: <meta name="twitter:image" content="{{ avada_seo_social_image }}">{%- endcomment %}
      {%- comment %}</locksmith:5ad2>{% endcomment -%}
    {%- endcapture -%}
  {% endif %}
{%- endunless -%}

{{ tw_social_image }}
