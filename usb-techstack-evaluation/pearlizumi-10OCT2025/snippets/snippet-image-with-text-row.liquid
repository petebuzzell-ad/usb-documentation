<div data-block-id="{{ block.id }}" data-block-type="image-with-text-row-block" class="lg:mb-30 md:mb-18 mb-16">
  <div class="container mx-auto xl:px-0 md:px-6">
    <div class="flex items-center lg:flex-row flex-col md:mb-18 mb-21.5">
      <div class="flex-1 mb-6 lg:mb-0 md:w-5/6{% if block.settings.image_alignment_10 == 'right' %} lg:order-2{% endif %}">
        {% if block.settings.image_10 != blank %}
        {% assign block_image_10 = block.settings.image_10 | img_url: 'master' %}
        {% endif %}
        {% if block.settings.image_10_mobile != blank %}
        {% assign block_image_mobile_10 = block.settings.image_10_mobile | img_url: 'master' %}
        {% endif %}
        {% if block_image_10 != blank %}
        <picture>
          <source media="(max-width: 767px)"
            data-srcset="{%- if block_image_mobile_10 != blank -%}{{ block_image_mobile_10 }}{%- else -%}{{ block_image_10 }}{%- endif -%}">
          <source media="(min-width: 768px)" data-srcset="{{ block_image_10 }}">
          <img data-src="{{ block_image_10 }}" alt="{{ block_image_10.alt }}" class="lazy w-full">
        </picture>
        {% endif %}
      </div>
      <div class="flex-1 lg:max-w-1/3 lg:mr-21.5 lg:ml-32 lg:text-left text-center md:px-0 px-6 md:w-5/6">
        {%- if block.settings.sub_title_10 != blank -%}
        <h6 class="md:text-h6 special font-semibold md:tracking-normal md:capitalize mb-4 pt-0">
          {{ block.settings.sub_title_10 | escape }}
        </h6>
        {%- endif -%}
        {% if block.settings.title_10 != blank %}
        <h2 class="md:mb-10 mb-6 tracking-normal">{{ block.settings.title_10 | escape }}
        </h2>
        {% endif %}
        {% if block.settings.text_10 != blank %}
        <p class="md:text-h6 text-h6-m tracking-normal font-medium lg:mb-16 mb-6">
          {{ block.settings.text_10 }}
        </p>
        {% endif %}
        {%- if block.settings.button_label_10 != blank -%}
        <a href="{% if block.settings.button_link_10 != blank %}{{ block.settings.button_link_10 }}{% else %}#{% endif %}"
          class="button button-{{ block.settings.button_10 }} font-semibold mx-auto md:max-w-btn max-w-btn-sm lg:ml-0">
          {{ block.settings.button_label_10 | escape }}
        </a>
        {%- endif -%}
      </div>
    </div>
    <div class="flex items-center lg:flex-row flex-col md:mb-18 mb-21.5">
      <div class="flex-1 mb-6 lg:mb-0 md:w-5/6{% if block.settings.image_alignment_11 == 'right' %} lg:order-2{% endif %}">
        {% if block.settings.image_11 != blank %}
        {% assign block_image_11 = block.settings.image_11 | img_url: 'master' %}
        {% endif %}
        {% if block.settings.image_11_mobile != blank %}
        {% assign block_image_mobile_11 = block.settings.image_11_mobile | img_url: 'master' %}
        {% endif %}
        {% if block_image_11 != blank %}
        <picture>
          <source media="(max-width: 767px)"
            data-srcset="{%- if block_image_mobile_11 != blank -%}{{ block_image_mobile_11 }}{%- else -%}{{ block_image_11 }}{%- endif -%}">
          <source media="(min-width: 768px)" data-srcset="{{ block_image_11 }}">
          <img data-src="{{ block_image_11 }}" alt="{{ block_image_11.alt }}" class="lazy w-full">
        </picture>
        {% endif %}
      </div>
      <div class="flex-1 lg:max-w-1/3 lg:ml-21.5 lg:mr-32 lg:text-left text-center md:px-0 px-6 md:w-5/6">
        {%- if block.settings.sub_title_11 != blank -%}
        <h6 class="md:text-h6 special font-semibold md:tracking-normal md:capitalize mb-4 pt-0">
          {{ block.settings.sub_title_11 | escape }}
        </h6>
        {%- endif -%}
        {% if block.settings.title_11 != blank %}
        <h2 class="md:mb-10 mb-6 tracking-normal">{{ block.settings.title_11 | escape }}
        </h2>
        {% endif %}
        {% if block.settings.text_11 != blank %}
        <p class="lg:text-h6 text-h6-m tracking-normal font-medium lg:mb-16 mb-6">
          {{ block.settings.text_11 }}
        </p>
        {% endif %}
        {%- if block.settings.button_label_11 != blank -%}
        <a href="{% if block.settings.button_link_11 != blank %}{{ block.settings.button_link_11 }}{% else %}#{% endif %}"
          class="button button-{{ block.settings.button_11 }} font-semibold mx-auto md:max-w-btn max-w-btn-sm lg:ml-0">
          {{ block.settings.button_label_11 | escape }}
        </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>