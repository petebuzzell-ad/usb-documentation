{% assign short_id = block.id | slice: -3, 3 %}

<style>

  
{% if block.settings.override_fonts %}
    {{ block.settings.text_font | font_face }}
    {{ block.settings.headline_font | font_face }}
{% endif %}

#sprob-{{ block.id }} p {
    {% if block.settings.override_text_sizes %}
    font-size: {{ block.settings.text_size }}px;
    {% endif %}
    {% if block.settings.override_fonts %}
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    {% endif %}
    {% if block.settings.text_line_height != 'inherit' %}line-height: {{ block.settings.text_line_height }};{% endif %}
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
    padding: 0;
    {% if block.settings.override_text_colors %}
    color: {{ block.settings.text_color }};
    {% endif %}
}

#sprob-{{ block.id }} p:last-child {
    margin: 0;
}

#sprob-{{ block.id }} ul, #sprob-{{ block.id }} ol {
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
}

#sprob-{{ block.id }} li {
    {% if block.settings.override_text_sizes %}
        font-size: {{ block.settings.text_size }}px;
        {% endif %}
    {% if block.settings.override_fonts %}
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    {% endif %}
    {% if block.settings.text_line_height != 'inherit' %}line-height: {{ block.settings.text_line_height }};{% endif %}
    margin: 0 0 5px 0;
    padding: 0;
    {% if block.settings.override_text_colors %}
    color: {{ block.settings.text_color }};
    {% endif %}
}

#sprob-{{ block.id }} li:last-child {
    margin: 0;
}

#sprob-{{ block.id }} p a,
#sprob-{{ block.id }} p a:visited
#sprob-{{ block.id }} li a,
#sprob-{{ block.id }} li a:visited {
    {% if block.settings.override_text_colors %}
    color: {{ block.settings.link_color }};
    {% endif %}
}

@media (max-width: 800px) {
    #sprob-{{ block.id }} p,
    #sprob-{{ block.id }} li {
        {% if block.settings.override_text_sizes %}
        font-size: {{ block.settings.mobile_text_size }}px;
        {% endif %}
    }
}

#sprob-{{ block.id }} h1,
#sprob-{{ block.id }} h2,
#sprob-{{ block.id }} h3,
#sprob-{{ block.id }} h4,
#sprob-{{ block.id }} h5 {
    {% if block.settings.override_text_sizes %}
    font-size: {{ block.settings.headline_size }}px;
    {% endif %}
    {% if block.settings.override_fonts %}
    font-family: {{ block.settings.headline_font.family }}, {{ block.settings.headline_font.fallback_families }};
    font-weight: {{ block.settings.headline_font.weight }};
    {% endif %}
    {% if block.settings.headline_line_height != 'inherit' %}line-height: {{ block.settings.headline_line_height }};{% endif %}
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
    padding: 0;
    {% if block.settings.override_text_colors %}
    color: {{ block.settings.text_color }};
    {% endif %}
}

#sprob-{{ block.id }} h1:last-child,
#sprob-{{ block.id }} h2:last-child,
#sprob-{{ block.id }} h3:last-child,
#sprob-{{ block.id }} h4:last-child,
#sprob-{{ block.id }} h5:last-child {
    margin: 0;
}


@media (max-width: 800px) {
    #sprob-{{ block.id }} h1,
    #sprob-{{ block.id }} h2,
    #sprob-{{ block.id }} h3,
    #sprob-{{ block.id }} h4,
    #sprob-{{ block.id }} h5 {
        {% if block.settings.override_text_sizes %}
        font-size: {{ block.settings.mobile_headline_size }}px;
        {% endif %}
    }
}

#sprob-{{ block.id }} h2 {
    {% if block.settings.override_text_sizes %}
    font-size: {{ block.settings.headline_size | minus:5  | at_least:13 }}px;
    {% endif %}
}

#sprob-{{ block.id }} h3 {
    {% if block.settings.override_text_sizes %}
    font-size: {{ block.settings.headline_size | minus:10 | at_least:13 }}px;
    {% endif %}
}

#sprob-{{ block.id }} h4 {
    {% if block.settings.override_text_sizes %}
    font-size: {{ block.settings.headline_size | minus:15 | at_least:13 }}px;
    {% endif %}
}

#sprob-{{ block.id }} h5 {
    {% if block.settings.override_text_sizes %}
    font-size: {{ block.settings.headline_size | minus:20 | at_least:13 }}px;
    {% endif %}
}

@media (max-width: 800px) {
    #sprob-{{ block.id }} h2 {
        {% if block.settings.override_text_sizes %}
        font-size: {{ block.settings.mobile_headline_size | minus:5 | at_least:13 }}px;
        {% endif %}
    }

    #sprob-{{ block.id }} h3 {
        {% if block.settings.override_text_sizes %}
        font-size: {{ block.settings.mobile_headline_size | minus:10 | at_least:13 }}px;
        {% endif %}
    }

    #sprob-{{ block.id }} h4 {
        {% if block.settings.override_text_sizes %}
        font-size: {{ block.settings.mobile_headline_size | minus:15 | at_least:13 }}px;
        {% endif %}
    }

    #sprob-{{ block.id }} h5 {
        {% if block.settings.override_text_sizes %}
