{% layout none %}
{%- assign color_label = 'color,colour,couleur,cor,colore,farbe,색,色,カラー,färg,farve,szín' | split: ',' -%}
{% assign current_variant = product.selected_or_first_available_variant %}

{% liquid
  if shop.permanent_domain == 'usbns.myshopify.com'
    assign storefront = "US"
  endif

  assign CAD_pricing = ""
  if storefront == "CA"
    assign CAD_pricing = " CAD"
  endif
%}

<div class="flex flex-col lg:flex-row">
  <div class="flex mb-8 lg:mb-0 justify-start md:w-minicart-tablet lg:w-minicart-desktop pr-2.5">
    <img class="w-35 h-35 md:w-27 md:h-27 lg:w-45 lg:h-45 object-contain mr-4 md:mr-3 lg:mr-4 self-start bg-faint-cloud" src="{{ current_variant.image | default: product.featured_image | img_url: '300x' }}" alt="{{ product.title }}">
    <div>
      <div class="text-left">
        <h6 class="text-p-lg mb-1 font-semibold">{{ product.title }}</h6>
        {% if product.metafields["global"]["prd_sub_title"] != blank %}
          <div class="hidden lg:block">
            <p class="p-s font-sora font-normal pt-0 mb-0">{{ product.metafields["global"]["prd_sub_title"] }}</p>
          </div>
        {% endif %}
        <div class="mb-2" data-price-wrapper data-variant-id="{{ current_variant.id }}">
            <span class="text-p leading-5 font-semibold font-sora text-pine mr-1" data-mini-cart-price></span>
            <span class="text-p-s leading-5 font-semibold line-through text-light-stone font-sora" data-mini-cart-compare-price></span>
        </div>
        <p class="uppercase text-special-xs text-stone font-sora font-semibold mb-2">Qty:&nbsp;<span id="miniCartQuantity" data-mini-cart-quantity></span></p>
        {%- for option in product.options -%}
          {%- if option != 'Default Title' -%}
            {%- capture option_index -%}option{{forloop.index}}{%- endcapture -%}
            {%- assign downcased_option = option | downcase -%}
            <p class="uppercase text-special-xs text-stone font-sora font-semibold mb-2 {% if color_label contains downcased_option %} md:max-w-45 {% endif %}">{{- option -}}:&nbsp;{{- current_variant[option_index] -}}</p>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  <div class="mx-auto lg:ml-auto lg:mr-0 w-full sm:w-full lg:w-329 max-w-full" data-cart-buttons>
    {%- comment -%}
    {%- if settings.free_shipping_enabled_pros or settings.free_shipping_enabled_normals -%}
      {% render 'cart-shipping-widget' %}
    {%- endif -%}
    {%- endcomment -%}
    <a class="button-primary mb-4 w-full max-w-full font-semibold" href="/cart">VIEW CART & CHECKOUT</a>
    <button class="button button-outline-dark w-full max-w-full font-semibold" onclick="eHS.miniCart.close()">CONTINUE SHOPPING</button>
  </div>
</div>