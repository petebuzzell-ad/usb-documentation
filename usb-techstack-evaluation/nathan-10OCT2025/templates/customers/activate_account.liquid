<section class="mx-auto w-full max-w-600 px-6 md:px-14 lg:pt-25 lg:pb-75 lg:px-22.5 lg:max-w-1200">
  <div class="account_page account_page-activate mx-auto w-full pt-8 pb-10 lg:p-0 lg:max-w-387">
    {% form 'activate_customer_password', class: 'account-form text-center' %}

    <h2 class="text-h3-m lg:text-h3 uppercase text-left mb-2 lg:mb-3">{{ 'customer.activate_account.title' | t }}</h2>
    <div class="lg:mb-11 mb-8 text-left">
      <p class="text-p-s lg:text-p">{{ 'customer.activate_account.subtext' | t: email: email }}</p>
    </div>

    {{ form.errors | default_errors }}

    <div class="relative lg:mb-8 mb-6">
      <input type="password" name="customer[password]" id="ResetPassword"
        class="border border-silver focus:border-black text-black text-p font-sora w-full h-12 pt-5 pb-1 px-3 outline-none appearance-none"
        placeholder=" " data-required>
        <label for="ResetPassword">
          {{ 'customer.activate_account.password' | t }}
        </label>
    </div>

    <div class="relative lg:mb-8 mb-9">
      <input type="password" name="customer[password_confirmation]" id="PasswordConfirmation"
        class="border border-silver focus:border-black text-black text-p font-sora w-full h-12 pt-5 pb-1 px-3 outline-none appearance-none"
        placeholder=" " data-required>
        <label for="PasswordConfirmation">
          {{ 'customer.activate_account.password_confirm' | t }}
        </label>
    </div>

    <button type="button" class="form-submit button-primary-lg mb-10 w-full max-w-full py-4.5 cursor-pointer">{{ 'customer.activate_account.submit' | t }}</button>

    <a href="/account/login" class="inline-block text-special mb-8 font-sora font-semibold uppercase text-black hover:text-pine border-b-2 border-black hover:border-pine">
      {{ 'customer.activate_account.cancel' | t }}</a>
    {% endform %}
  </div>
</section>