<div data-quantity-selector
  class="relative flex items-center w-full h-8 md:h-11 border border-silver px-1.5 pr-2 py-1.5 md:pr-4 md:py-2 cursor-pointer hover:shadow-qty text-black"
  tabindex="0" onclick="eHS.cart.toggleQuantitySelector(event, '{{ item.key }}')">
  <span class="sr-only">Quantity</span>
  <div class="flex items-center w-full">
    <span data-quantity class="text-special-s lg:text-special w-full text-center">{{- item.quantity -}}</span>
    <div class="stroke-black">
      {% render 'svg-chevron-down' width: '14px', height: '8px' %}
    </div>
  </div>
  <div data-quantity-dropdown data-id="{{ item.id }}" data-key="{{ item.key }}"
    class="absolute hidden z-10 bottom-1 py-1.5 h-40 overflow-y-auto bg-white transform translate-y-full border border-silver border-t-0 rounded-t-none text-special-s lg:text-special"
    style="width: calc(100% + 2px); left: -1px;"
  >
    {% for number in (1..30) %}
      <span class="block w-full p-1.5 hover:bg-light-lush text-center" tabindex="0" onclick="eHS.cart.selectQuantity(event, '{{ item.key }}', '{{ line }}', {{ forloop.index }}, this)">
        <span class="block w-8">{{ forloop.index }}</span>
      </span>
    {% endfor %}
  </div>
</div>