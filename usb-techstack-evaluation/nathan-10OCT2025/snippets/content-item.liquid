{%- if page != blank -%}
  {%- if page.metafields["global"]["tile_image"] != blank -%}
    {%- assign image = page.metafields["global"]["tile_image"] -%}
  {%- endif -%}
  {%- assign title = page.title -%}
  {%- assign excerpt = page.content -%}
  {%- assign cta_url = page.url -%}
{%- elsif article != blank -%}
  {%- assign image = article.image -%}
  {%- assign title = article.title -%}
  {%- assign excerpt = article.excerpt_or_content -%}
  {%- assign cta_url = article.url -%}
{%- endif -%}

{%- if page != blank or article != blank -%}
  <div class="content-item w-1/2 lg:w-1/3 px-3 mb-2.5 md:mb-4 sm:mb-7.5 relative">
    <a href="{{ cta_url }}" class="content-item__image block mb-3">
      <div class="content-item__image-wrapper relative w-full h-0 bg-faint-cloud pt-[100%]">
        {%- if image -%}
          {%- if page != blank -%}
            <img class="content-item__primary-image w-full h-full absolute object-cover top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src="{{image}}">
          {%- else -%}
            <img class="content-item__primary-image w-full h-full absolute object-cover top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src="{{image | img_url: '600x'}}" alt="{{image.alt}}">
          {%- endif -%}
        {%- endif -%}
      </div>
    </a>
    <div class="content-item__info pb-16 md:pb-8.5">
      <a href="{{ cta_url }}" class="content-item__title text-p-xs font-normal sm:text-p-lg block mb-3 lg:mb-2">{{- title -}}</a>
      <div class="content-item__excerpt text-p-xs font-normal mb-3 overflow-hidden">{{- excerpt | strip_html -}}</div>
      <a href="{{ cta_url }}" class="font-lato font-bold text-special-xs md:text-special text-grey-one border border-b-2 border-l-0 border-r-0 border-t-0 hover:border-blue-one hover:text-blue-one">READ MORE</a>
    </div>
  </div>
{%- endif -%}